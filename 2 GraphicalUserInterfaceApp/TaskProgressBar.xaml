<UserControl x:Class="_2_GraphicalUserInterfaceApp.TaskProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:_2_GraphicalUserInterfaceApp"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="600">
    <Grid>
        <StackPanel Background="Transparent" Orientation="Horizontal" Margin="0 5 0 5">
            <Label x:Name="taskIdLbl" Width="100"></Label>
            <ProgressBar x:Name="taskPB" Width="200"></ProgressBar>
            <Button x:Name="startBtn" Content="Start" Width="50" Click="StartBtn_Click"/>
            <Button x:Name="pauseBtn" Content="Pause" Width="50" Click="PauseBtn_Click"/>
            <Button x:Name="resumeBtn" Content="Resume" Width="50" Click="ResumeBtn_Click"/>
            <Button x:Name="cancelBtn" Content="Cancel" Width="50" Click="CancelBtn_Click"/>
            <Button x:Name="removeBtn" Content="Remove" Width="50" Click="RemoveBtn_Click"/>
        </StackPanel>
    </Grid>
</UserControl>
